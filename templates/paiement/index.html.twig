{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}
{% block body %}
{{ parent() }}
<div class="app-content content">
   <div class="content-overlay"></div>
   <div class="header-navbar-shadow"></div>
   <div class="content-wrapper">
      <div class="content-header row">
         <div class="content-header-left col-md-9 col-12 mb-2">
            <div class="row breadcrumbs-top">
               <div class="col-12">
                  <h2 class="content-header-title float-left mb-0">Liste des paiement :</h2>
                  <div class="breadcrumb-wrapper col-12">
                     <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a>
                        </li>
                        <li class="breadcrumb-item"><a href="{{ path('paiement_index') }}">Paiement</a>
                        </li>
                        <li class="breadcrumb-item active">Liste
                        </li>
                     </ol>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <section id="basic-datatable">
         <div class="row">
            <div class="col-12">
               <div class="card">
                  <div class="card-header">
                     <h4 class="card-title">Liste des Paiement</h4>
                  </div>
                  <div class="card-content">
                     <div class="card-body card-dashboard">
                        <button id="addRow" class="btn btn-primary mb-2 waves-effect waves-light"><i class="feather icon-plus"></i>&nbsp;<a href="{{ path('paiement_new') }}">Create new</a></button>
                        <div class="table-responsive">
                           <table class="table zero-configuration">
                              <thead>
                                 <tr>
                <th>IdPaiement</th>
                <th>Date de Paiement</th>
                <th>Mode</th>
                <th>MontantTotal</th>
                <th>MotantRest</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paiement in paiements %}
            <tr>
                <td>{{ paiement.idPaiement }}</td>
                <td>{{ paiement.dtPaiement ? paiement.dtPaiement|date('Y-m-d') : '' }}</td>
                <td>{{ paiement.mode }}</td>
                <td>{{ paiement.montantTotal }}</td>
                <td>{{ paiement.motantRest }}</td>
                <td>
                     <a class="btn btn-icon btn-outline-primary mr-1 mb-1 waves-effect waves-light" href="{{ path('paiement_show', {'idPaiement': paiement.idPaiement}) }}"><i class="feather icon-search"></i></a>
                    <a class="btn btn-icon btn-outline-primary mr-1 mb-1 waves-effect waves-light" href="{{ path('paiement_edit', {'idPaiement': paiement.idPaiement}) }}"><i class="feather icon-edit"></i></a>
               </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
       </tr>
                                 {% endfor %}
                              </tbody>
                              <tfoot>
                                 <tr>
                                  <th>Id</th>
                <th>IdPaiement</th>
                <th>DtPaiement</th>
                <th>Mode</th>
                <th>MontantTotal</th>
                <th>MotantRest</th>
                <th>actions</th>
                                 </tr>
                              </tfoot>
                           </table>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
   </div>
</div>
</div>
{% endblock %}
