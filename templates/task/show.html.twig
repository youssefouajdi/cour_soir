{% extends 'base.html.twig' %}

{% block title %}Tache{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ task.Objet }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ task.sujet }}</td>
            </tr>
            <tr>
                <th>Date</th>
